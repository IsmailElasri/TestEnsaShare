<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.signup1teacher">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="158dp"
                    android:layout_height="137dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/teacher" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ajouter" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView33"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name" />

            <EditText
                android:id="@+id/editText16"
                android:layout_width="280dp"
                android:layout_gravity="center"
                android:layout_height="36dp"
                android:background="@drawable/shadow_input"
                android:ems="10"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Last Name" />

            <EditText
                android:id="@+id/editText17"
                android:layout_width="280dp"
                android:layout_gravity="center"
                android:layout_height="36dp"
                android:background="@drawable/shadow_input"
                android:ems="10"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/textView31"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teached levels" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/listtextteacher"
                    android:layout_width="285dp"
                    android:layout_gravity="center"
                    android:layout_height="36dp"
                    android:background="@drawable/rounded_button"
                    android:gravity="center"
                    android:text="GI1"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:fontFamily="sans-serif" />

                <ImageView
                    android:id="@+id/listlevelsteacherImage"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="7dp"

                    android:layout_width="21dp"
                    android:layout_height="18dp"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/list" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/backmainteacherImage"
                android:layout_width="60dp"
                android:layout_height="47dp"
                android:layout_marginRight="200dp"
                app:srcCompat="@drawable/left_arrow" />

            <ImageView
                android:id="@+id/nextsignup2teacherImage"
                android:layout_width="63dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/right_arrow"
                tools:ignore="InvalidId" />
        </LinearLayout>


</LinearLayout>